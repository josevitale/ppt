{% extends 'layout.html.twig' %}

{% block contenido %}
    <h1 id="partido_new_titulo">Pron√≥stico partido</h1>
    {{ form_start(form, {'action': path('partido_usuario_create', { 'partido_id': partidousuario.partido.id, 'usuario_id': partidousuario.usuario.id }), 'attr': {'class': 'form-horizontal'}}) }}
        <div class="form-group">
            {{ form_label(form.golesLocal, partidousuario.partido.equipolocal.nombre, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.golesLocal, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.golesVisitante, partidousuario.partido.equipovisitante.nombre, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.golesVisitante, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button id="partido_new_aceptar" type="submit" class="btn btn-primary">{{ 'general.submit'|trans }}</button>
                <a id="partido_new_cancelar" class="btn btn-primary" href="{{ path('homepage') }}" role="button">{{ 'general.cancelar'|trans }}</a>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
